<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="component"
		label="基本選項"
		description=""
		addfieldpath="administrator/components/com_fbimporter/models/fields"
	>

        <field name="fb_uid"
             type="text"
             default="facebook"
             label="Facebook uid"
             description="粉絲頁或人物的id"
        />
		
		<field type="spacer" hr="true" />
		
		<field name="first_line_to_title"
             type="radio"
             default="1"
             label="第一行擷取為標題"
             description="將第一行轉換成文章標題"
        >
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		
		<field name="title_max_char"
             type="text"
             default=""
             label="最大標題字數"
             description="如果第一行的長度太多，將會截斷"
        />
		
		
		
		<field name="category_match_left"
             type="text"
             default="["
             label="擷取分類的左括號"
             description="以此作為擷取分類名稱的正規表示式字串"
        />
		
		<field name="category_match_right"
             type="text"
             default="]"
             label="擷取分類的右括號"
             description="以此作為擷取分類名稱的正規表示式字串"
        />
		
		<field name="category_not_match_continue"
             type="radio"
             default="0"
             label="擷取不到分類就跳過"
             description="當格式不符合標題定義的分類格式時，就略過此項目。"
        >
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		
		<field name="select_category_when_exists"
             type="radio"
             default="1"
             label="分類擷取成功時依舊可選分類"
             description="當分類存在且匹配成功，是否還讓使用者可以手動選擇分類。"
        >
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		
		<field name="catid"
             type="category"
             label="預設分類"
             description=""
			 extension="com_content"
        >
			<option>- 以格式分類為預設值 -</option>
		</field>
		
		<field name="format"
             type="format"
             default="1"
             label="選擇匯入格式"
             description=""
        />
		
		<field name="can_select_format"
             type="radio"
             default="1"
             label="手動選取格式"
             description="可替每篇文章選擇不同的格式，預設會先使用選項中的全域格式。"
        >
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		
		<field name="sort_by_current"
             type="radio"
             default="0"
             label="以匯入時間排序"
             description="以匯入的時間做為文章建立時間，若選否，則以FB發佈的時間為準。"
        >
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		
		<field type="spacer" hr="true" />
		
		<field name="image_width"
             type="text"
             default="550"
             label="圖片最大寬度"
             description="避免圖片太寬破版"
        />

	</fieldset>
	
	<fieldset name="FB_CONNECT" label="Facebook 連結">
		<field name="app_id"
             type="text"
             default=""
             label="App ID"
             description="可填入自己的 Facebook APP ID ，若不填則使用系統預設的APP"
			 size="40"
        />
		
		<field name="app_secret"
             type="text"
             default=""
             label="APP Secret"
             description="可填入自己的 Facebook APP Secret ，若不填則使用系統預設的 APP Sceret"
			 size="40"
        />
	</fieldset>
	
	<fieldset name="permissions"
		description="JCONFIG_PERMISSIONS_DESC"
		label="JCONFIG_PERMISSIONS_LABEL"
	>

		<field name="rules" type="rules"
			component="com_fbimporter"
			filter="rules"
			validate="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			section="component" />
	</fieldset>

</config>
